{
  "name": "react-weather-app",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Weather Application built with React",
  "author":
    "Cody Brunner <rockchalkwushock@icloud.com> (https://rcws-development.com)",
  "repository": "https://github.com/rockchalkwushock/react-weather-app.git",
  "homepage": "https://github.com/rockchalkwushock/react-weather-app#readme",
  "bugs": "https://github.com/rockchalkwushock/react-weather-app/issues",
  "scripts": {
    "build": "nps build",
    "cm": "nps commit",
    "dev": "nps dev",
    "eject": "react-scripts eject",
    "prettier": "prettier --single-quote --no-semi --write",
    "start": "nps",
    "test": "nps test"
  },
  "dependencies": {
    "apollo-client-preset": "^1.0.3",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "halogenium": "^2.2.2",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-apollo": "^2.0.1",
    "react-dom": "^16.1.1",
    "react-scripts": "1.0.17"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "husky": "^0.15.0-beta.13",
    "lint-staged": "^6.0.0",
    "nps": "^5.7.1",
    "nps-utils": "^1.5.0",
    "prettier": "^1.8.2",
    "react-test-renderer": "^16.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && nps validate.withCoverage"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/*.js",
      "!src/containers/index.js",
      "src/containers/*.js",
      "src/data/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  },
  "lint-staged": {
    "*.js": ["yarn prettier", "git add"]
  },
  "now": {
    "alias": ["the-rising-sun", "the-rising-sun-beta"],
    "env": {
      "NODE_ENV": "production"
    },
    "files": ["./build"],
    "name": "the-rising-sun"
  }
}
